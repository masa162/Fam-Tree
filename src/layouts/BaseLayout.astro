} = Astro.props as Props;

/* ---------- og:image ã®çµ¶å¯¾ URL ç”Ÿæˆ ---------- */
const ogImage = (() => {
  if (typeof image === "string") {
    return new URL(image, Astro.site).href;
  }
  if (image) {
    return new URL(image.src, Astro.site).href;
